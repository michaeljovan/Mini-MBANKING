   <children>
      <BorderPane prefHeight="150.0" prefWidth="335.0">
         <top>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: bluE;" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="minfobutton" layoutX="87.0" layoutY="36.0" mnemonicParsing="false" onAction="#gotominfo" prefHeight="31.0" prefWidth="81.0" text="m-info" />
